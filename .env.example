# Shop Manager - Production Environment Variables

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Google Sheets API (Optional - can be set via UI)
GOOGLE_SHEETS_API_KEY=

# Database Configuration (if you add database later)
DATABASE_URL=

# Security Settings
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging (leave LOG_FILE empty for cloud deployments)
LOG_LEVEL=INFO
# LOG_FILE=logs/app.log  # Comment out for production cloud deployments
